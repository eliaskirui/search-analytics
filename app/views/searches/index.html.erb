
<div class="container mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4">Search Logs</h1>

  <div class="flex items-center mb-4">
    <a href="<%= new_search_path %>" class="bg-blue-500 text-white px-4 py-2 rounded">New Search</a>
  </div>

  <table class="min-w-full bg-white border border-gray-300">
    <thead class="text-right">
      <tr>
        <th class="py-2 px-4 border-b">ID</th>
        <th class="py-2 px-4 border-b">Search Term</th>
        <th class="py-2">Search Count</th>
        <th class="py-2 px-4 border-b">User IP</th>
        <th class="py-2 px-4 border-b">Searched At</th>
      </tr>
    </thead>
    <tbody class="text-right">
      <% @search_logs.each do |search_log| %>
        <tr>
          <td class="py-2 px-4 border-b"><%= search_log.id %></td>
          <td class="py-2 px-4 border-b"><%= search_log.term %></td>
          <td class="py-2 px-4 border-b"><%= search_log.search_count %></td>
          <td class="py-2 px-4 border-b"><%= search_log.user_ip %></td>
          <td class="py-2 px-4 border-b"><%= search_log.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
